<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient
                android:startColor="#0267ff"
                android:centerColor="#896d93"
                android:endColor="#ff4c00"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient
                android:startColor="#418dff"
                android:centerColor="#b491a1"
                android:endColor="#ff7b41"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>

</layer-list>
