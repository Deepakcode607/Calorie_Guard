<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:text="Profile"
        android:textColor="#FF4C00"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/back"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dp_edt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/edt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/semigrey"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/dp_edt"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/edt_data_btn"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/scanfood"
        android:gravity="end|center_vertical"
        android:text="Edit profile   "
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pen"
        android:padding="7dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="@+id/edt_data_btn"
        app:layout_constraintTop_toTopOf="@+id/edt_data_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_data_btn"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:layout_marginStart="30dp"
                    android:textSize="20sp"
                    android:textColor="@color/semigrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    android:background="@drawable/login_creds_bg"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edt_age"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="18"
                        android:gravity="end"
                        android:textColor="#ababab"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:textSize="20sp"
                        android:paddingStart="10dp"
                        android:layout_height="wrap_content"
                        android:text="years"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/semigrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/login_creds_bg"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:layout_marginEnd="20dp"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edt_height"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:background="@color/white"
                        android:inputType="number"
                        android:textColor="#ababab"
                        android:text="170"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/unit_p"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/unit_spinnner_profile_bg"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biological Gender"
                    android:layout_marginStart="30dp"
                    android:textSize="20sp"
                    android:textColor="@color/semigrey"/>

                <Spinner
                    android:id="@+id/edt_sex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/cred_spinner_bg"
                    android:elevation="2dp"
                    android:enabled="false"
                    android:padding="10dp"
                    android:textColor="@color/semigrey"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present Weight"
                    android:layout_marginStart="30dp"
                    android:textSize="20sp"
                    android:textColor="@color/semigrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    android:background="@drawable/login_creds_bg"
                    android:elevation="2dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edt_w1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:background="@color/white"
                        android:inputType="number"
                        android:textColor="#ababab"
                        android:text="60"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:paddingStart="10dp"
                        android:layout_height="wrap_content"
                        android:text="kg"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aimed Weight"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/semigrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_creds_bg"
                    android:elevation="2dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edt_w2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:background="@color/white"
                        android:inputType="number"
                        android:text="55"
                        android:textColor="#ababab"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:layout_height="wrap_content"
                        android:text="kg"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Residing City"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/semigrey"/>

                <EditText
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/login_creds_bg"
                    android:elevation="2dp"
                    android:inputType="none"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:text="Kolkata"
                    android:textColor="#ababab"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity Level"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/semigrey"/>

                <TextView
                    android:id="@+id/edt_activity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/cred_spinner_bg"
                    android:elevation="2dp"
                    android:enabled="false"
                    android:paddingEnd="30dp"
                    android:textColor="@color/black"
                    android:textColorHint="#ababab"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:hint="Select your Activity Level"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/save_edt_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/listbox"
                android:backgroundTint="@color/blue"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>